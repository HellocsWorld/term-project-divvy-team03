<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.divvy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Controllers.DetailedListingController"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.UserSignUpController"
        android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.DisplayListingsController"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.SearchController"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.MyListingsController"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.CreateListingController"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.MessagingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.UserProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.CreateReviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Controllers.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".httprequest"
            android:exported="false" />
        <service android:name=".GetListingsService" />
        <service android:name = ".CreateRatingService"/>
        <service android:name=".GetRatingService"/>
        <service
            android:name=".RegService"/>
        <service
            android:name=".LoginService"/>
    </application>

</manifest>
